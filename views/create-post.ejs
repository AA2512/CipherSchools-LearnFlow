<script>
  var editor1 = new RichTextEditor("#div_editor1");
</script>

<script>
  const uploadFile = async (file) => {
    try {
      const fileName = file.name;
      const contentType = file.type;

      const urlRes = await fetch(
        `/upload?fileName=${fileName}&contentType=${contentType}`,
        {
          method: "GET",
        }
      );

      const data = await urlRes.json();
      const url = data.url;
      const key = data.key;

      const response = await fetch(url, {
        method: "PUT",
        headers: {
          "Content-Type": contentType,
        },
        body: file,
      });
      return {
        response,
        url,
        key,
      };
    } catch (error) {
      $("#loadingModal").modal("hide");
      $("errorModal").modal("show");
    }
  };
  const createPost = async (postObject) => {
    try {
      const response = await fetch("/post/create/new", {
        method: "POST",
        body: JSON.stringify(postObject),
        headers: { "Content-Type": "application/json" },
      });
      return response;
    } catch (error) {
      $("#loadingModal").modal("hide");
      $("errorModal").modal("show");
    }
  };
</script>

<script>
  const form = document.querySelector("form");
  const message = document.querySelector("#message");

  form.addEventListener("submit", async (event) => {
    event.preventDefault();
    $("#loadingModal").modal("show");
    $("#successModal").modal("hide");
    $("#errorModal").modal("hide");

    // Make sure the file type matches the content-type of your pre-signed URL

    try {
      const videoThumbnail =
        document.querySelector("#video-thumbnail").files[0];
      const thumbnailResponse = await uploadFile(videoThumbnail);
      const video = document.querySelector("#video").files[0];
      const videoResponse = await uploadFile(video);
      if (videoResponse.response.ok) {
        const postCreationResponse = await createPost({
          title: form.title.value,
          description: editor1.getHTMLCode(),
          thumbnailKey: thumbnailResponse.key,
          videoKey: videoResponse.key,
        });
        $("#loadingModal").modal("hide");
        $("#successModal").modal("show");
      } else {
        $("#loadingModal").modal("hide");
        $("#errorModal").modal("show");
      }
    } catch (error) {
      $("#loadingModal").modal("hide");
      $("#errorModal").modal("show");
    }
  });
</script>
